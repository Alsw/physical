{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
      <div class="row clearfix">
        <div class="col-md-12 column">
          <div class="page-header">
            <h2>用户管理列表</h2>
          </div>
          <div class="pull-right">
             <button id="addBtn" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
              添加用户
            </button>
          </div>
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>姓名</th>
                <th>性别</th>
                <th>年龄</th>
                <th>介绍</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
            {% for user in users %}
              <tr>
                <td>{{ user['id'] }}</td>
                <td>{{ user['username'] }}</td>
                <td>{{ user['sex'] }}</td>
                <td>{{ user['age'] }}</td>
                <td>{{ user['introduce'] }}</td>
                <td>
                  <button name="update" class="btn btn-info" data-toggle="modal" data-target="#addModal">
                    修改
                  </button>
                  <button name="delete" class="btn btn-danger">删除</button>
                </td>
              </tr>
            {% endfor %}  
            </tbody>
          </table>
        </div>
      </div>
      <!-- 模态框（Modal） -->
      <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
              </button>
              <h4 class="modal-title" id="myModalLabel">
                添加用户信息
              </h4>
            </div>
            <div class="modal-body">
              <form id="addForm">
                <div id="errMsg" class="alert alert-warning alert-dismissable">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                    &times;
                  </button>
                  警告！用户名输入和合法。
                </div>
                <div class="form-group hidden">
                  <label for="userID">ID</label>
                  <input type="text" name="id" class="form-control">
                </div>
                <div class="form-group">
                  <label for="username">姓名</label>
                  <input type="text" name="username" id="username" class="form-control" placeholder="请输入姓名">
                </div>
                <div class="form-group">
                    <label for="username">请选择性别</label>
                    <label class="checkbox-inline">
                      <input type="radio" name="sex" id="sexMan" value="男" checked>男
                    </label>
                    <label class="checkbox-inline">
                      <input type="radio" name="sex" id="sexWomen"  value="女">女
                    </label>
                </div>
                <div class="form-group">
                  <label for="age">年龄</label>
                  <input type="text" name="age" id="age" class="form-control" placeholder="请输入年龄">
                </div>
                <div class="form-group">
                  <label for="introduce">介绍</label>
                  <textarea class="form-control" rows="3" id="introduce" name="introduce">请填写个人介绍...</textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭
              </button>
              <button type="button" class="btn btn-primary disabled" id="submitBtn">
                提交更改
              </button>
            </div>
          </div>
          <!-- /.modal-content -->
        </div>
        <!-- /.modal -->
      </div>

{% endblock %}

{% block javascripts %}
  <script src="{{ asset('bundles/user/js/require.js') }}" data-main="{{ asset('bundles/user/js/main.js') }}">
  </script> 
{% endblock %}